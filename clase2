//todos son metodos de la clase String, le podemos hacer cierta similitud con el def de phyton

public class Clase2 {
	
	public static String pedirNombre() {
		Scanner scan = new Scanner (System.in);
		System.out.println("Inserte un numero:");
		return scan.nextLine();
	}

	public static boolean esPrimo(int n) {
		for(int i = 2; i < n - 1; i++) {
			if (n % 1 == 0) {
				return false;
			}
		}
		return true;
	}
	
	public static void main (String[]args){
		
		int numero = Integer.parseInt(pedirNombre());
		
		System.out.println(esPrimo(numero));
		
	}
}




public class UltimoEjerciciostring {

	public static boolean palabrasCruzadas(String a, String b, String c) {
		
		if (a.length() == 0 || b.length() == 0 || c.length() == 0) {
			return false;
		}
			
		a = a.toUpperCase();
		b = b.toUpperCase();
		c = c.toUpperCase();
		
		for (int i = 0; i < b.length(); i++) {
			if (a.indexOf(b.charAt(i)) != - 1) { //Ubicamos a en b.
				i++;
				for (int j = i + 1; j < b.length();j++) {
					if (c.indexOf(b.charAt(j)) != -1) { //Ubicamos c en b.
						return true;
					}
				}
			}
		}
		
		return false;
		}
	
	public static void main (String []args) {
		
	}
	
}



public class UltimoEjecrcico {

	public static boolean esCapicua(String s) {
		String k ="";
		for (int i = s.length() - 1; i >= 0; i--) {
			k = k + s.charAt(i);
		}
		return s.equals(k); //devuelve true si son iguales, y false si no sonn iguales.
	}
	
	public static void main (String[]args) {
		
	}
}
